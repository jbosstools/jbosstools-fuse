<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
	<routes xmlns="http://camel.apache.org/schema/spring" id="context1">
	 <route id="route1">
	    <from id="inbox" uri="file:inbox"/>
	    <log id="logger" message="bla"/>
	 	<to id="outbox" uri="file:outbox"/>
	 </route>
	 <route id="route2">
		<choice id="choice">
            <when id="when1">
                <xpath>$foo = 'bar'</xpath>
                <to id="to1" uri="direct:b"/>
            </when>
            <otherwise id="otherwise">
                <to id="to2" uri="direct:d"/>
            </otherwise>
        </choice>
	 </route>
  </routes>
</beans>