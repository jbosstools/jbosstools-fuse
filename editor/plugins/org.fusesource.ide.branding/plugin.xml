      TODO these don't work until m2eclipse 0.13 fixes catalogs due to missing Wagon
   <extension
         point="org.eclipse.m2e.core.indexes">
      <index
            indexId="fusesource-nexus-public"
            isShort="false"
            repositoryUrl="https://repo.fusesource.com/nexus/content/groups/public">
      </index>
   </extension>
      -->
</plugin>
