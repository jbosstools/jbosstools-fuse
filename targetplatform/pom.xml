<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>org.fusesource.ide</groupId>
		<artifactId>project</artifactId>
		<version>7.2.0-SNAPSHOT</version>
    <relativePath>..</relativePath>
	</parent>

	<artifactId>org.fusesource.ide.targetplatform</artifactId>
	<packaging>pom</packaging>
	<name>Fuse :: Development Target Platform</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>kepler_dev.target</file>
									<type>target</type>
									<classifier>kepler_dev</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
               <groupId>org.eclipse.tycho.extras</groupId>
               <artifactId>target-platform-validation-plugin</artifactId>
               <version>${tycho-version}</version>
               <executions>
                   <execution>
                       <phase>generate-resources</phase>
                       <goals>
                           <goal>validate-target-platform</goal>
                       </goals>
                       <configuration>
                           <targetFiles>
                               <param>indigo_dev.target</param>
                           </targetFiles>
                           <failOnError>false</failOnError>
                       </configuration>
                   </execution>
               </executions>
           </plugin>
		</plugins>
	</build>

	<profiles>

	  <profile>

	    <!-- Should be called explicitly in order to (re)create the Juno output target file -->
	    <id>generate-target-juno</id>
	    <build>
	      <plugins>
		<plugin>
		  <groupId>org.jboss.tools.tycho-plugins</groupId>
		  <artifactId>target-platform-utils</artifactId>
		  <version>0.16.0-SNAPSHOT</version>
		  <executions>
		    <execution>
		      <phase>generate-resources</phase>
		      <goals>
			<goal>merge-targets</goal>
		      </goals>
		      <configuration>
			<sourceTargetArtifacts>
			  <item>
			    <groupId>org.jboss.tools.integration-stack</groupId>
			    <artifactId>target-platform</artifactId>
			    <version>4.0.0-SNAPSHOT</version>
			    <classifier>base</classifier>
			  </item>
			</sourceTargetArtifacts>
			<sourceTargetFiles>
			  <item>juno_dev.target</item>
			</sourceTargetFiles>
			<outputFile>jbtis_4.0_dev.target</outputFile>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>

		<plugin>
		  <groupId>org.eclipse.tycho.extras</groupId>
		  <artifactId>target-platform-validation-plugin</artifactId>
		  <version>${tycho-version}</version>
		  <executions>
		    <execution>
		      <phase>generate-resources</phase>
		      <goals>
			<goal>validate-target-platform</goal>
		      </goals>
		      <configuration>
			<targetFiles>
			  <param>jbtis_4.0_dev.target</param>
			</targetFiles>
			<failOnError>false</failOnError>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>

	      </plugins>
	    </build>
	  </profile>

	  <profile>

	    <!-- Default - Kepler -->
	    <id>generate-target</id>
	    <build>
	      <plugins>
		<plugin>
		  <groupId>org.jboss.tools.tycho-plugins</groupId>
		  <artifactId>target-platform-utils</artifactId>
		  <version>0.16.0-SNAPSHOT</version>
		  <executions>
		    <execution>
		      <phase>generate-resources</phase>
		      <goals>
			<goal>merge-targets</goal>
		      </goals>
		      <configuration>
			<sourceTargetArtifacts>
			  <item>
			    <groupId>org.jboss.tools.integration-stack</groupId>
			    <artifactId>target-platform</artifactId>
			    <version>4.1.0-SNAPSHOT</version>
			    <classifier>base</classifier>
			  </item>
			</sourceTargetArtifacts>
			<sourceTargetFiles>
			  <item>kepler_dev.target</item>
			</sourceTargetFiles>
			<outputFile>jbtis_4.1_dev.target</outputFile>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>

		<plugin>
		  <groupId>org.eclipse.tycho.extras</groupId>
		  <artifactId>target-platform-validation-plugin</artifactId>
		  <version>${tycho-version}</version>
		  <executions>
		    <execution>
		      <phase>generate-resources</phase>
		      <goals>
			<goal>validate-target-platform</goal>
		      </goals>
		      <configuration>
			<targetFiles>
			  <param>jbtis_4.1_dev.target</param>
			</targetFiles>
			<failOnError>false</failOnError>
		      </configuration>
		    </execution>
		  </executions>
		</plugin>

	      </plugins>
	    </build>
	  </profile>

		<profile>
			<id>sign</id>
			<!-- To sign plug-ins and features, run: mvn -Psign -Dkeystore=<path> 
				-Dstorepass=*** -Dalias=<keyalias> clean install -->
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-jar-plugin</artifactId>
							<version>2.3.1</version>
							<executions>
								<execution>
									<goals>
										<goal>sign</goal>
									</goals>
								</execution>
							</executions>
							<configuration>
								<skip>true</skip>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
	</profiles>

</project>
