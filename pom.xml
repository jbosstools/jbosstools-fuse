      <plugin>
        <groupId>${m2e.group.id}</groupId>
           <artifactId>tycho-versions-plugin</artifactId>
        <version>${tycho-version}</version>
      </plugin>
      <plugin>
    <groupId>${m2e.group.id}</groupId>
    <artifactId>tycho-surefire-plugin</artifactId>
    <version>${tycho-version}</version>
    <configuration>
      <useUIThread>true</useUIThread>
      <bundleStartLevel>
        <bundle>
          <id>org.eclipse.equinox.ds</id>
          <level>1</level>
          <autoStart>true</autoStart>
        </bundle>
      </bundleStartLevel>
    </configuration>
      </plugin>
      <plugin>
        <groupId>${m2e.group.id}</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
      <plugin>
        <groupId>${m2e.group.id}</groupId>
        <artifactId>tycho-compiler-plugin</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>${m2e.group.id}</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <resolver>p2</resolver>
          <pomDependencies>consider</pomDependencies>
          <target>
            <artifact>
              <groupId>org.fusesource.ide</groupId>
              <artifactId>org.fusesource.ide.targetplatform</artifactId>
              <version>${project.version}</version>
              <classifier>jbtis_4.1_dev</classifier>
            </artifact>
          </target>
          <ignoreTychoRepositories>false</ignoreTychoRepositories>
          <environments> 
             <environment>
                <os>win32</os>
                <ws>win32</ws>
                <arch>x86</arch>
             </environment>
             <environment>
                <os>linux</os>
                <ws>gtk</ws>
                <arch>x86_64</arch>
             </environment>
             <environment>
                <os>linux</os>
                <ws>gtk</ws>
                <arch>x86</arch>
             </environment>
             <environment>
                <os>macosx</os>
                <ws>cocoa</ws>
                <arch>x86</arch>
             </environment>
             <environment>
                <os>macosx</os>
                <ws>cocoa</ws>
                <arch>x86_64</arch>
             </environment>
          </environments>
        </configuration>
      </plugin>
      <!-- necessary to omit the maven pom.xml inside the generated jar files -->
      <plugin>
          <groupId>${m2e.group.id}</groupId>
          <artifactId>tycho-packaging-plugin</artifactId>
          <version>${tycho-version}</version>
          <configuration>
              <!--  <includeSources>true</includeSources> -->
              <format>'v'yyyyMMdd-HHmm'-LOCAL'</format>
              <archiveSite>true</archiveSite>
              <archive>
                  <addMavenDescriptor>false</addMavenDescriptor>
              </archive>
              <strictVersions>true</strictVersions>
          </configuration>
      </plugin>

    </plugins>

    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.scala-tools</groupId>
          <artifactId>maven-scala-plugin</artifactId>
          <version>${scala-plugin-version}</version>
          <executions>
            <execution>
              <goals>
                <goal>compile</goal>
                <goal>testCompile</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <jvmArgs>
              <jvmArg>-Xmx1024m</jvmArg>
            </jvmArgs>
            <args>
              <!-- arg>-unchecked</arg -->
              <arg>-deprecation</arg>
            </args>
            <scalaVersion>${scala-version}</scalaVersion>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

