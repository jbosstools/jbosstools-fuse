<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.fusesource.ide.uitests</groupId>
		<artifactId>tests</artifactId>
		<version>11.18.0-SNAPSHOT</version>
	</parent>
	<artifactId>org.jboss.tools.fuse.ui.bot.tests</artifactId>
	<name>Red Hat Fuse Tooling :: UI Tests :: Tests :: UI Bot Tests</name>
	<packaging>eclipse-test-plugin</packaging>

	<properties>
		<surefire.timeout>21600</surefire.timeout>
		<memoryOptions2>-XX:MaxPermSize=384m</memoryOptions2>
		<swt.bot.test.record.screencast>false</swt.bot.test.record.screencast>
		<pauseFailedTest>false</pauseFailedTest>
		<reddeer.skipUnfixedIssues>false</reddeer.skipUnfixedIssues>
		<integrationTestsSystemProperties>-Dorg.jboss.tools.central.donotshow=true -Dreddeer.skipUnfixedIssues=${reddeer.skipUnfixedIssues} -Dorg.eclipse.swt.internal.gtk.disablePrinting</integrationTestsSystemProperties>
		<test.installPath.OSX/>
		<karaf.version>3.0.3</karaf.version>
		<rd.config>${project.build.directory}/requirements/karaf-3.0.3.json</rd.config>
		<reddeerConfig>-Drd.config=${rd.config}</reddeerConfig>
		<enable.debug.log>false</enable.debug.log>
		<org.jboss.tools.fuse.camel2bom.url>https://raw.githubusercontent.com/jbosstools/jbosstools-fuse/main/configuration/camel2bom.properties</org.jboss.tools.fuse.camel2bom.url>
		<org.jboss.tools.fuse.fismarker.url>https://raw.githubusercontent.com/jbosstools/jbosstools-fuse/main/configuration/fismarker.properties</org.jboss.tools.fuse.fismarker.url>
		<ideConfig>-Dorg.jboss.tools.fuse.camel2bom.url=${org.jboss.tools.fuse.camel2bom.url} -Dorg.jboss.tools.fuse.fismarker.url=${org.jboss.tools.fuse.fismarker.url} ${additionalSystemProperties}</ideConfig>
		<systemProperties>${integrationTestsSystemProperties} ${reddeerConfig} ${ideConfig}</systemProperties>
		<test.class>AllTests</test.class>
		<customization.file>resources/settings/plugin_customization.ini</customization.file>
		<maven.repo>${project.build.directory}/requirements/repository/</maven.repo>
		<staging.repos>false</staging.repos>
		<rd.skipUnfixedIssues>true</rd.skipUnfixedIssues>
		<skipUITests>false</skipUITests>
		<testUIClass>SmokeTests</testUIClass>
		<skipRequirements>false</skipRequirements>
		<fuseDeploymentType>OpenShift</fuseDeploymentType>
		<fuseRuntimeType>SpringBoot</fuseRuntimeType>
		<fuseCamelVersion>2.18.1.redhat-000021</fuseCamelVersion>
		<apicuritoProject>none</apicuritoProject>
		<additionalSystemProperties>--add-exports=jdk.internal.jvmstat/sun.jvmstat.monitor=ALL-UNNAMED</additionalSystemProperties>
	</properties>

	<repositories>
		<repository>
			<id>jbosstools-fuse-tooling</id>
			<url>${jbosstools-fuse-site}</url>
			<layout>p2</layout>
		</repository>
	</repositories>

	<build>
		<plugins>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>copy-files</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<encoding>UTF-8</encoding>
							<outputDirectory>${project.build.directory}/requirements</outputDirectory>
							<resources>
								<resource>
									<directory>resources/config</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>com.googlecode.maven-download-plugin</groupId>
				<artifactId>maven-download-plugin</artifactId>
				<configuration>
					<skip>${skipRequirements}</skip>
				</configuration>
				<executions>
					<execution>
						<id>get-karaf</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>https://archive.apache.org/dist/karaf/${karaf.version}/apache-karaf-${karaf.version}.zip</url>
							<unpack>true</unpack>
							<outputDirectory>${project.build.directory}/requirements</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Fuse Bot Tests -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<configuration>
					<appArgLine>-eclipse.password resources/security/password -pluginCustomization ${customization.file} -clean -testpluginname org.jboss.tools.fuse.ui.bot.test</appArgLine>
					<testSuite>org.jboss.tools.fuse.ui.bot.test</testSuite>
					<testClass>**/${testUIClass}</testClass>
					<useUIThread>false</useUIThread>
					<skip>${skipUITests}</skip>
					<systemProperties>
						<logDebug>${enable.debug.log}</logDebug>
						<maven.settings>${project.build.directory}/requirements/emptysettings.xml</maven.settings>
						<maven.repository>${maven.repo}</maven.repository>
						<staging.repositories>${staging.repos}</staging.repositories>
						<rd.skipUnfixedIssues>${rd.skipUnfixedIssues}</rd.skipUnfixedIssues>
						<fuseDeploymentType>${fuseDeploymentType}</fuseDeploymentType>
						<fuseRuntimeType>${fuseRuntimeType}</fuseRuntimeType>
						<fuseCamelVersion>${fuseCamelVersion}</fuseCamelVersion>
						<apicuritoProject>${apicuritoProject}</apicuritoProject>
					</systemProperties>
					<dependencies combine.children="append">
						<!-- Workaround for JBIDE-16161/Eclipse bug 424104 -->
						<dependency>
							<type>eclipse-feature</type>
							<artifactId>org.eclipse.e4.rcp</artifactId>
							<version>0.0.0</version>
						</dependency>
						<!-- This entry should enable creating of default JDK on Mac -->
						<dependency>
							<type>p2-installable-unit</type>
							<artifactId>org.eclipse.jdt.feature.group</artifactId>
							<version>0.0.0</version>
						</dependency>
						<!-- We need Jolokia in JMX navigator -->
 						<dependency>
 							<type>p2-installable-unit</type>
 							<artifactId>org.jboss.tools.jmx.feature.feature.group</artifactId>
 							<version>0.0.0</version>
 						</dependency>
						<!-- We need Openshift plugin -->
 						<dependency>
 							<type>p2-installable-unit</type>
 							<artifactId>org.jboss.tools.openshift.feature.feature.group</artifactId>
 							<version>0.0.0</version>
 						</dependency>
					</dependencies>
				</configuration>
			</plugin>

		</plugins>
	</build>
	<profiles>
		<profile>
			<id>smoke</id>
			<activation>
				<property>
					<name>test</name>
					<value>SmokeTests</value>
				</property>
			</activation>
			<properties>
				<reddeerConfig/>
				<test.class>SmokeTests</test.class>
				<skipRequirements>true</skipRequirements>
			</properties>
		</profile>
		<profile>
			<id>mac-installPath</id>
			<activation>
				<os>
					<family>mac</family>
				</os>
			</activation>
			<properties>
				<test.installPath.OSX>/codereadystudio.app/</test.installPath.OSX>
			</properties>
		</profile>
		<profile>
			<id>install-base</id>
			<activation>
				<property>
					<name>test.installBase</name>
				</property>
			</activation>
			<properties>
				<test.installPath>${test.installBase}${test.installPath.OSX}</test.installPath>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-surefire-plugin</artifactId>
						<configuration>
							<testRuntime>p2Installed</testRuntime>
							<work>${test.installPath}</work>
							<profileName>devstudio</profileName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>maven-proxy</id>
			<activation>
				<property>
					<name>test.mavenProxy</name>
				</property>
			</activation>
			<properties>
				<customization.file>target/plugin_customization_with_proxy_settings.ini</customization.file>
			</properties>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-resources-plugin</artifactId>
						<version>2.6</version>
						<executions>
							<execution>
								<id>copy-resources</id>
								<phase>validate</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<encoding>UTF-8</encoding>
									<outputDirectory>${basedir}/target/</outputDirectory>
									<resources>
										<resource>
											<directory>resources/settings</directory>
											<filtering>true</filtering>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
